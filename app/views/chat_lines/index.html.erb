<h1>Listing chat_lines</h1>

<table>
  <tr>
    <th>Chat room</th>
    <th>User</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @chat_lines.each do |chat_line| %>
  <tr>
    <td><%= chat_line.chat_room %></td>
    <td><%= chat_line.user %></td>
    <td><%= chat_line.content %></td>
    <td><%= link_to 'Show', chat_line %></td>
    <td><%= link_to 'Edit', edit_chat_line_path(chat_line) %></td>
    <td><%= link_to 'Destroy', chat_line, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

